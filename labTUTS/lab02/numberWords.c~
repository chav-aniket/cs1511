// This program takes an positive integer input between 1 and 5
// and outputs the number in word form

#include <stdio.h>

int main(void) {
    int dig;
    printf("Please enter an integer: ");
    scanf("%d", &dig);
    
    if (dig<1) {
        printf("You entered a number less than one.\n");
    } else if (dig == 1) {
        printf("You entered one.\n");
    } else if (dig == 2) {
        printf("You entered two.\n");
    } else if (dig == 3) {
        printf("You entered three.\n");
    } else if (dig == 4) {
        printf("You entered four.\n");
    } else if (dig == 5) {
        printf("You entered five.\n");
    } else if (dig > 5) {
        printf("You entered a number greater than five.\n");
    }
    
    return 0;
}
