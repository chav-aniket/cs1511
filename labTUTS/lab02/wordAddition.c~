int printRes(res) {
    
    if (res == 1) {
        printf("one");
    } else if (res == 2) {
        printf("two\n");
    } else if (res == 3) {
        printf("three\n");
    } else if (res == 4) {
        printf("four\n");
    } else if (res == 5) {
        printf("five\n");
    } else if (res == 6) {
        printf("six\n");
    } else if (res == 7) {
        printf("seven\n");
    } else if (res == 8) {
        printf("eight\n");
    } else if (res == 9) {
        printf("nine\n");
    } else if (res == 10) {
        printf("ten\n");
    } else if (res > 10) {
        printf("%d\n", digTwo);
    } 
    // Negative Numbers
    else if (res == -1) {
        printf("negative one\n");
    } else if (res == -2) {
        printf("negative two\n");
    } else if (res == -3) {
        printf("negative three\n");
    } else if (res == -4) {
        printf("negative four\n");
    } else if (res == -5) {
        printf("negative five\n");
    } else if (res == -6) {
        printf("negative six\n");
    } else if (res == -7) {
        printf("negative seven\n");
    } else if (res == -8) {
        printf("negative eight\n");
    } else if (res == -9) {
        printf("negative nine\n");
    } else if (res == -10) {
        printf("negative ten\n");
    } else if (res < -10) {
        printf("%d\n", res);
    }
    
    return 0;
}

int main(void) {
    printf("Please enter two integers: ");
    scanf("%d %d",&digOne, &digTwo);
    
    res = digOne + digTwo;
    //printf("%d, %d, %d", digOne, digTwo, res);
    printFirstDig(digOne);
    printf(" + ");
    printSecondDig(digTwo);
    printf(" = ");
    printRes(res);
    
    return 0;
}
